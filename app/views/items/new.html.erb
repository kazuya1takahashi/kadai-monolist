          <%= text_field_tag :keyword, @keyword, class: 'fotm-control input-lg', placeholder: "キーワードを入力", size: 40 %>
        </div>
        <%= submit_tag '商品を探索', class: 'btn btn-success btn-lg' %>
      <% end %>
    </div>
  </div>
</div>

<%= render 'items', items: @items %>